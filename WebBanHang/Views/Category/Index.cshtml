@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<WebBanHang.Models.Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">Danh Sách Danh Mục</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="text-end mb-3">
            <a asp-action="Add" class="btn btn-success">➕ Thêm danh mục</a>
        </div>
    }

    <table class="table table-bordered shadow-sm text-center">
        <thead class="table-dark">
            <tr>
                <th>Tên danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">🔧 Sửa</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">❌ Xóa</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
